{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{navigation}}



{{!-- Display the rest of posts--}}
<section class="artikkelit-container">
    {{#get "posts" limit="7" include="tags,authors" as |artikkeli|}}
    {{#foreach artikkeli}}
        {{#has number="2,6,7"}}
        <div class="child hide-mobile" href="#">
        </div>
        {{/has}}

    <a class="child" href="{{url}}">
        <div class="artikkelit-image-parent">
            <div class="artikkelit-image" style="background-image: url('{{feature_image}}')">
            </div>
        </div>

        <div class="artikkelit-text">
            <div class="artikkelit-title">{{title}}</div>
            <div class="artikkelit-excerpt">{{excerpt words="15"}}</div>
        </div>

    </a>
    
    
    {{/foreach}}
    {{/get}}
</section>